<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gallery_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blog_detail_top_option_panel_height"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/imgBtnBack"
            android:layout_width="28dp"
            android:layout_height="@dimen/blog_write_control_button_size"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/blog_write_control_button_margin"
            android:src="@drawable/top_back_black"/>


        <ImageView
            android:id="@+id/dsTitleImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@null"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_attach_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/lib_top_attached"/>

            <TextView
                android:id="@+id/gallerySelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgBtnBack"
                android:textColor="#000000"
                android:textSize="13sp"
                android:text="0/1"/>

            <ImageView
                android:id="@+id/imgBtnRotateImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_rotate_right_black_24dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBtnAttachSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:src="@drawable/selector_btn_attach_done"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/label_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="@string/btn_bale_upload"/>

            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>